<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.councilreader.daily-update</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>-c</string>
        <!-- UPDATE THIS PATH to match where you cloned the repo -->
        <string>cd ~/la-council-scraper && ./local_daily_update.sh</string>
    </array>

    <!-- Run at 6:00 AM every day -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>6</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <!-- Also run on load (catches up if Mac was off) -->
    <key>RunAtLoad</key>
    <true/>

    <!-- Log stdout/stderr -->
    <key>StandardOutPath</key>
    <string>/tmp/councilreader-stdout.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/councilreader-stderr.log</string>

    <!-- Environment variables -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin</string>
    </dict>
</dict>
</plist>
